<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.music.admin.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>SongServlert</servlet-name>
    <servlet-class>com.music.admin.SongServlert</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SingerServlert</servlet-name>
    <servlet-class>com.music.admin.SingerServlert</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SongAddServlet</servlet-name>
    <servlet-class>com.music.admin.SongAddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SingerApiServlert</servlet-name>
    <servlet-class>com.music.admin.SingerApiServlert</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SongApiServlert</servlet-name>
    <servlet-class>com.music.admin.SongApiServlert</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.music.admin.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.music.admin.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SongServlert</servlet-name>
    <url-pattern>/song.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SingerServlert</servlet-name>
    <url-pattern>/singer.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SongAddServlet</servlet-name>
    <url-pattern>/songAdd.action</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SingerApiServlert</servlet-name>
    <url-pattern>/api/singer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SongApiServlert</servlet-name>
    <url-pattern>/api/song</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

</web-app>
